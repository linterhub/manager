{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "typeRoots": [
            "node_modules/@types",
            "./src/typings"
        ],
        "baseUrl": ".",
        "paths": {
            "*": ["src/typings/*"]
        },
        "types": [
            "node"
        ],
        "esModuleInterop": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "src/typings"
    ]
}
